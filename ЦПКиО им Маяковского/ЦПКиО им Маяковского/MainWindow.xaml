        <Button x:Name="BtnAuth" Content="Авторизация" HorizontalAlignment="Left" Height="42" Margin="90,351,0,0" VerticalAlignment="Top" Width="190" Background="#FF498C51" FontFamily="Comic Sans MS" Click="Button_Click" MouseDown="BtnAuth_MouseDown"/>
        <Label Content="Логин" HorizontalAlignment="Left" Margin="56,161,0,0" VerticalAlignment="Top" FontFamily="Comic Sans MS"/>
        <Label Content="Пароль" HorizontalAlignment="Left" Margin="57,233,0,0" VerticalAlignment="Top" FontFamily="Comic Sans MS"/>
        <PasswordBox x:Name="passBoxShow" HorizontalAlignment="Left" Height="35" Margin="58,275,0,0" VerticalAlignment="Top" Width="242"/>
        <Button x:Name="ShowBtn" Content="Показать" HorizontalAlignment="Left" Height="35" Margin="300,275,0,0" VerticalAlignment="Top" Width="53" Click="Button_Click_1" PreviewMouseDoubleClick="Button_PreviewMouseDoubleClick" PreviewMouseUp="Button_PreviewMouseUp" PreviewMouseDown="ShowBtn_PreviewMouseDown"/>






    </Grid>
</Window>
