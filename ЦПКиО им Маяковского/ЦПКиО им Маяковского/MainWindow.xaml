        xmlns:local="clr-namespace:ЦПКиО_им_Маяковского"
        mc:Ignorable="d"
        Title="MainWindow" Height="523" Width="404" Loaded="Window_Loaded">
    <Grid HorizontalAlignment="Left" Width="412" Margin="0,0,0,10">
        <StackPanel Margin="0,0,0,400" Background="#FF498C51"></StackPanel>

        <Label Content="Авторизация" HorizontalAlignment="Center" Height="62" Margin="0,19,0,0" VerticalAlignment="Top" Width="200" FontSize="30" RenderTransformOrigin="0.5,0.469" FontFamily="Comic Sans MS"/>
        <TextBox x:Name="loginBox" HorizontalAlignment="Left" Height="35" Margin="57,198,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="243"/>
